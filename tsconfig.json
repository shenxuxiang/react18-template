{
  "compilerOptions": {
    "target": "ES5",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": ["./typings"],
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "removeComments": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "sourceMap": false
  },
  "include": [
    "./src/**/*",
    "./typings/**/*.d.ts",
    "./global.d.ts"
  ],
  "exclude": []
}
